<h1>Members#index</h1>
<p>Find me in app/views/members/index.html.erb</p>

<table border='1'>

	<% @members.each do |member| %>

		<tr>
			<td> <%= member.first_name %> </td>
			<td> <%= member.last_name %> </td>
			<td> <%= link_to 'Show', member_path(member.member_id) %></td>
			<td> <%= link_to 'Edit', edit_member_path(member.member_id) %></td>
			<td> <%= link_to "Delete", member_path(member.member_id), method: :delete, data: { confirm: "Are you sure?" } %></td>
		</tr>

	<% end %>

</table>